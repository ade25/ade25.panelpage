<div class="contentpanel-content" id="contentpanel-content"
  tal:attributes="class string:contentpanel-content ${context/klass}">
  <div class="contentpanel-header">
    <div class="contentpanel-title">
      <h2 tal:condition="context/headline"
        tal:replace="context-headline" />
      <h2 tal:condition="not:context/headline"
        tal:replace="context/Title" />
    </div>
    <p class="contentpanel-abstract" tal:condition="context/abstract"
      tal:content="context/abstract" />
  </div>
</div>