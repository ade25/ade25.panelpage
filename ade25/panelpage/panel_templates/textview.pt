<div class="contentpanel contentpanel-base"
  tal:attributes="class string:contentpanel contentpanel-base ${context/klass};
                  id string:contentpanel-${context/getId}">
  <div class="contentpanel-content">
    <div class="contentpanel-body" tal:condition="context/textblock">
      <div tal:attributes="class string:contentpanel-text ${context/klass}"
        tal:content="context/textblock">Headline</div>
    </div>
      <div class="contentpanel-body" tal:condition="not:context/textblock">
          <div tal:attributes="class string:contentpanel-text ${context/klass}">
              <h6></h6>
              <small>No content added yet</small>
          </div>
      </div>
  </div>
</div>