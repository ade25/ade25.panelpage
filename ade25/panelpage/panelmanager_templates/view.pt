<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ade25.panelpage">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">

    <div class="app-contentpage app-panelpage app-panelmanager">
        <div class="contentpage-header">
            <h1 class="contentpage-title" tal:content="context/Title" />
            <p class="contentpage-teaser" tal:condition="context/Description"
                tal:content="context/Description" />
        </div>
        <div class="app-editpanel"
            tal:condition="view/is_editable">
            <a class="btn btn-primary btn-editpanel pull-right"
                data-toggle="collapse"
                data-parent="#app-editpanel-block"
                href="#createBlockForm">
                <small i18n:translate="">Add content panel</small>
            </a>
            <form class="app-form app-create-form collapse"
                id="createBlockForm"
                method="post" role="form"
                tal:define="errors view/errors"
                tal:attributes="action request/URL">
                <h4 i18n:translate="">
                    Please provide a human readable title for this panel
                </h4>
                <p class="text-muted" i18n:translate="">
                    The title will be displayed next to a default icon
                </p>
                <div class="row">
                    <div class="col-xs-12 col-md-6">
                        <div class="form-group field"
                            tal:define="error errors/title | nothing;
                                        err_msg python:error and error['active'] == True;
                                        value request/title | nothing"
                            tal:attributes="class python:err_msg and 'form-group has-error' or 'form-group'">
                            <label class="sr-only" for="title" i18n:translate="">Title</label>
                                <input class="form-control" id="title"
                                    type="text" name="title"
                                    placeholder="Please enter panel name"
                                    tal:attributes="value python:error and view.default_value(error) or value">
                                <div class="help-block error"
                                    tal:condition="err_msg">
                                  <i class="fa fa-exclamation-triangle"></i>
                                  <span tal:replace="python:error['msg']" />
                                </div>
                        </div><!-- /title field -->
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <div class="form-group">
                            <span tal:replace="structure context/@@authenticator/authenticator"/>
                            <button class="btn btn-primary btn-editpanel"
                                name="form.button.Submit"
                                id="form.button.Submit"
                                i18n:translate="">Create content block</button>
                        </div>
                    </div>
                </div>            
            </form>
        </div>
        <div class="app-panelpage-content contentpage-body app-panelmanager-content" id="content-core"
            tal:condition="view/has_panels">
            <div class="row">
                <tal:block tal:repeat="item view/contentpanels">
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        <div tal:define="panel_content python:view.get_rendered_block(item.UID)">
                            <span tal:replace="structure panel_content" />
                        </div>
                    </div>
                    <div class="clearfix visible-sm"
                        tal:define="idx repeat/item/number"
                        tal:condition="python:idx % 2 == 0"></div>
                    <div class="clearfix visible-md visible-lg"
                        tal:define="idx repeat/item/number"
                        tal:condition="python:idx % 4 == 0"></div>
                </tal:block>
            </div>
        </div>
    </div>

  </metal:content-core>
</metal:main>

</body>
</html>

