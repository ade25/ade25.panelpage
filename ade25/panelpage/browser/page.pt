<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
         metal:use-macro="context/main_template/macros/master"
         i18n:domain="ade25.sitecontent">
<body>

<metal:main fill-slot="main">
    <metal:content-core define-macro="main">

        <div class="app-page-header app-page__header">
            <div class="app-page__title">
                <h1 class="app-page__headline">
                        ${context/Title}
                </h1>
            </div>
            <p class="app-page__abstract" tal:condition="context/Description">
                    ${context/Description}
            </p>
        </div>
        <tal:comment tal:omit-tag="" tal:content="nothing">
            <div tal:replace="structure view/panel_page" />
        </tal:comment>

        <div class="app-page__main">
            <p>Panel page content will go here</p>
        </div>

    </metal:content-core>
</metal:main>

</body>
</html>

