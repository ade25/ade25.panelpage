<div class="c-panels">
    <div class="c-panel">
        <div class="c-panel__aside">
            <div class="c-panel__actions">
                <a class="c-panel__action" href="#add-new-panel"
                         tal:attributes="href python:context.absolute_url() + '/@@panel-create?index=0'">
                    <svg xmlns="http://www.w3.org/2000/svg" id="Ebene_1" width="64" height="64" viewBox="0 0 64 64">
                        <style>
                            .st3{fill:none;stroke:#ffffff;stroke-width:2;stroke-miterlimit:10}
                        </style>
                        <path d="M14.157 32h35.686M32 14.157v35.686" class="st3"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>
    <tal:panels tal:condition="python:view.has_content_panels()">
        <tal:panels tal:repeat="panel python:view.content_panels()">
            <div class="c-panels__item">
                <section class="c-panel">
                    <div class="c-panel__main">
                        Rendered content panel (/@@content-panel)
                        <pre tal:content="python:panel"></pre>
                    </div>
                    <div class="c-panel__aside">
                        <div class="c-panel__actions">
                            <a class="c-panel__action" href="#add-new-panel"
                                     tal:attributes="href python:context.absolute_url() + '/@@panel-create?index=0'">
                                <svg xmlns="http://www.w3.org/2000/svg" id="Ebene_1" width="64" height="64" viewBox="0 0 64 64">
                                    <style>
                                        .st3{fill:none;stroke:#ffffff;stroke-width:2;stroke-miterlimit:10}
                                    </style>
                                    <path d="M14.157 32h35.686M32 14.157v35.686" class="st3"/>
                                </svg>
                            </a>
                        </div>
                    </div>
                </section>
            </div>
        </tal:panels>
    </tal:panels>
    <p>Panel Grid will go here.</p>
</div>

