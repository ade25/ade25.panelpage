<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:xlink="http://www.w3.org/1999/xlink"
      lang="en"
         metal:use-macro="context/main_template/macros/master"
         i18n:domain="ade25.panelpage">
<body>

<metal:main fill-slot="main">
    <metal:content-core define-macro="main">

        <div class="c-panel-editor c-panel-editor--centered" id="panel-editor"
            tal:define="content_panel python:view.content_panel();
                        settings python:view.settings">

            <form class="o-form o-form--panel-page"
                  id="form-panel-edit"
                  method="post"
                     tal:attributes="action request/URL">

                <div class="c-panel-editor__header">
                    <div class="c-toolbar c-toolbar--primary">
                        <div class="c-toolbar__content">
                            <div class="c-toolbar__item">
                                <div class="c-toolbar__title">
                                    Editing Panel Page Content
                                    <small>Update Panel</small>
                                </div>
                            </div>
                            <div class="c-toolbar__item">
                                <div class="c-toolbar__actions">
                                    <a class="c-toolbar__action c-button c-button--default" href="/@@panels-cancel"
                                             tal:attributes="href python:context.absolute_url() + '/@@panel-page'" i18n:translate="">
                                        Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <section class="c-panel-editor__section">
                    <div class="c-widget-editor" tal:define="widget_id python:view.content_panel_widget()['id']">
                        <div class="c-widget-editor__item">
                            <div class="c-widget-editor__item-aside">
                                <svg class="o-icon o-icon--size-3 o-icon__ui--dots-dims">
                                    <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#ui--dots"></use>
                                </svg>
                            </div>
                            <div class="c-widget-editor__item-main">
                                <h5 class="c-widget-editor__item-title">Widget Default
                                    <span tal:content="python:view.content_panel_widget()['type']"></span></h5>
                                <small>last modified: 12.04.2019 - <span tal:content="python:view.content_panel_widget()['id']"></small>
                            </div>
                            <div class="c-widget-editor__item-actions">
                                <a class="c-button c-button--default c-widget-editor__item-link"
                                         tal:attributes="href python:context.absolute_url() + '/@@content-widget-edit-child'">
                                    <svg class="o-icon o-icon--md o-icon__ui--add-dims">
                                        <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#ui--add"></use>
                                    </svg>
                                </a>
                                <a class="c-button c-button--default c-widget-editor__item-link"
                                         tal:attributes="href python:context.absolute_url() + '/@@content-widget?wid=' + settings['panel_page_section'] + '/' + settings['panel_page_item'] + '/' + view.content_panel_widget()['id']">
                                    <svg class="o-icon o-icon--md o-icon__ui--pen-dims">
                                        <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#ui--pen"></use>
                                    </svg>
                                </a>
                            </div>
                        </div>
                        <div class="c-widget-editor__item c-widget-editor__item--secondary">
                            <div class="c-widget-editor__item-aside">
                                <svg class="o-icon o-icon--size-3 o-icon__ui--dots-dims">
                                    <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#ui--dots"></use>
                                </svg>
                            </div>
                            <div class="c-widget-editor__item-main">
                                <h5 class="c-widget-editor__item-title">01 - Child Element 1</h5>
                            </div>
                            <div class="c-widget-editor__item-actions">
                                <a class="c-button c-button--default c-widget-editor__item-link"
                                         tal:attributes="href python:context.absolute_url() + '/@@content-widget-edit'">
                                    <svg class="o-icon o-icon--md o-icon__ui--pen-dims">
                                        <use xlink:href="/assets/symbol/svg/sprite.symbol.svg#ui--pen"></use>
                                    </svg>
                                </a>
                            </div>
                        </div>

                        <div class="c-panel__main" tal:define="widget python:content_panel['widget'];widget_type python:str(widget['type'])">
                            <tal:content-widget tal:replace="structure python:context.restrictedTraverse('@@content-widget')(widget_type=widget['type'], widget_mode='edit')">
                                Rendered Content Widget
                            </tal:content-widget>
                        </div>
                    </div>
                    <div class="c-panel-editor__action">

                    </div>
                </section>

            </form>
        </div>

    </metal:content-core>
</metal:main>

</body>
</html>

