<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ade25.panelpage">
<body>

<metal:main fill-slot="main">
  <metal:content-core define-macro="main">
    <div class="panelpage-editor">
        <div class="app-page-header">
            <div class="app-page-title">
                <h1>Panel Page <small>Editor</small></h1>
            </div>
        </div>
    
        <div class="ppe-block">
            <div class="ppe-block-header">
                <p>Content Panel Info Headline</p>
            </div>
            <div class="ppe-block-content">
                <div class="app-page-header">
                    <h1 class="app-page-title" tal:content="context/Title" />
                </div>
                <p class="lead app-page-abstract" tal:condition="context/Description"
                    tal:content="context/Description" />
                <div class="app-page-body" id="content-core">
                    <div tal:condition="context/text"
                        tal:content="structure context/text/output" />
                </div>
            </div>
        </div>

        <tal:block tal:condition="view/has_subcontent">
            <div class="app-panelpage-content">
                <tal:items tal:repeat="item view/contained_blocks">
                    <div class="panelpage-list-item" href="#content">
                        <span class="app-sign" tal:content="repeat/item/number">1</span>
                        <span class="h5" tal:content="item/Title">First added panel</span>
                    </div>
                    <div tal:replace="structure python:view.render_item(item.UID)" />
                </tal:items>
            </div>
        </tal:block>

        <div class="no-data-panel"
            tal:condition="not:view/has_subcontent">
            <div class="row">
                <div class="col-xs-12 col-sm-1">
                    <div class="no-data-sign">
                        &hellip;
                    </div>
                </div>
                <div class="col-xs-12 col-sm-11">
                    <h3 class="no-data-title" i18n:translate="">
                        The are no content blocks asigned
                    </h3>
                </div>
            </div>
        </div>

        <form class="app-form app-create-form"
            id="createBlockForm"
            method="post" role="form"
            tal:define="errors view/errors"
            tal:attributes="action request/URL">
            <h4 i18n:translate="" class="sr-only">
                Please provide a human readable title for this content block
            </h4>
            <div class="row">
                <div class="col-xs-12 col-md-6">
                    <div class="form-group field"
                        tal:define="error errors/title | nothing;
                                    err_msg python:error and error['active'] == True;
                                    value request/title | nothing"
                        tal:attributes="class python:err_msg and 'form-group has-error' or 'form-group'">
                        <label class="sr-only" for="title" i18n:translate="">Title</label>
                            <input class="form-control" id="title"
                                type="text" name="title"
                                placeholder="Please enter panel name"
                                tal:attributes="value python:error and view.default_value(error) or value">
                            <div class="help-block error"
                                tal:condition="err_msg">
                              <i class="fa fa-exclamation-triangle"></i>
                              <span tal:replace="python:error['msg']" />
                            </div>
                    </div><!-- /title field -->
                    <p class="text-muted">
                        <strong i18n:translate="">Hint:</strong>
                        <span i18n:translate="">
                        Please provide a title useful to identify this specific
                        block during layout composition</span>
                    </p>
                </div>
                <div class="col-xs-12 col-md-6">
                    <div class="form-group">
                        <span tal:replace="structure context/@@authenticator/authenticator"/>
                        <button class="btn btn-primary btn-editpanel"
                            name="form.button.Submit"
                            id="form.button.Submit"
                            i18n:translate="">Create content block</button>
                    </div>
                </div>
            </div>            
        </form>

        <div class="app-page-content" id="content-core">
            <h2>Panel Layout</h2>
            <div class="panelpage-list">
                <div class="panelpage-list-item" href="#content">
                    <a class="btn btn-default pull-right" href="#edit-this">Drap Indicator</a>
                    <span class="app-sign">&hellip;</span>
                    <span class="h5">Fill me with sensible data</span>
                </div>
                <div class="panelpage-list-item" href="#content">
                    <span class="app-sign">1</span>
                    <span class="h5">First added panel</span>
                </div>
                <div class="panelpage-list-item" href="#content">
                    <span class="app-sign">2</span>
                    <span class="h5">The second panel in this page</span>
                </div>
                <div class="panelpage-list-item" href="#content">
                    <span class="app-sign">3</span>
                    <span class="h5">Another panel not ready yet</span>
                </div>
            </div>
            <!-- <div tal:replace="structure view/panelpage" /> -->
        </div>
    </div>

  </metal:content-core>
</metal:main>

</body>
</html>

