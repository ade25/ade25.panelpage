<div class="app-panelpage"
    tal:define="klass view/computed_klass"
    tal:attributes="class string:app-panelpage ${klass}">

    <div class="app-editpanel app-panelpage-edtibar"
        id="app-editpanel-block"
        tal:condition="view/is_editable">
        <a class="btn btn-primary btn-editpanel pull-right"
            tal:attributes="href string:${context/absolute_url}/@@panelpage-editor">
            <small i18n:translate="">Panel Page Editor</small>
        </a>
        <p class="text-discreet">Panel Page Blocks</p>
    </div>

    <tal:block tal:condition="view/has_subcontent">
        <div class="app-panelpage-content">
            <tal:items tal:repeat="item view/contained_blocks">
                <div tal:replace="structure python:view.render_item(item.UID)" />
            </tal:items>
        </div>
    </tal:block>
    <div class="app-editpanel app-panelpage-edtibar"
        id="app-editpanel-block"
        tal:condition="view/is_editable">

        <div class="no-data-panel"
            tal:condition="not:view/has_subcontent">
            <div class="row">
                <div class="col-xs-12 col-sm-1">
                    <div class="app-sign xno-data-sign">
                        <i class="fa fa-ellipsis-h"></i>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-11">
                    <h3 class="no-data-title" i18n:translate="">
                        The are no content blocks asigned
                    </h3>
                </div>
            </div>
        </div>

    </div>
</div>