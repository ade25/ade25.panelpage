<div class="app-contentpanel"
    data-appui="panel-adjustment"
    tal:define="is_adjustable view/height_adjustable"
    i18n:domain="ade25.panelpage">
    <div class="contentpanel-content">
        <div class="contentpanel-header">
            <div class="contentpanel-icon"
                tal:condition="view/has_icon">
                <i class="fa fa-th" tal:condition="context/icon_klass"
                    tal:attributes="class string:${context/icon_klass} fa-4x"></i>
            </div>
            <h3 class="contentpanel-title"
                tal:content="context/Title">Content Panel Headline</h3>
        </div>
        <div class="contentpanel-body"
            tal:attributes="data-appui python:is_adjustable and 'panel-adjustable' or 'disabled'">
            <div class="h4 contentpanel-teaser"
                tal:condition="context/Description"
                tal:content="context/Description">
                This is a highlighted teaser text</div>
            <p tal:condition="context/text"
                tal:content="structure context/text/output" />
            <tal:linked tal:condition="context/linked_item">
                <button type="button" class="btn btn-primary btn-block"
                    data-toggle="collapse"
                    data-target="#panel-list"
                    tal:condition="context/show_contentlisting"
                    tal:attributes="data-target string:#panel-list-${context/getId}">
                    <i class="fa fa-angle-down fa-lg"></i>
                    <span i18n:translate="">show details</span>
                </button>
                <div class="list-group text-left collapse"
                    id="panel-list"
                    tal:condition="context/show_contentlisting"
                    tal:attributes="id string:panel-list-${context/getId}">
                    <tal:block tal:repeat="item view/generate_contentlisting">
                        <a href="#" class="list-group-item"
                            tal:attributes="href item/getURL">
                          <span tal:content="item/Title">Cras justo odio</span>
                        </a>
                    </tal:block>
                </div>
            </tal:linked>
        </div>
        <div class="contentpanel-footer" tal:condition="context/linked_item">
            <a class="btn btn-primary contentpanel-link"
                    i18n:translate=""
                    tal:define="related view/resolve_linked_item"
                    tal:attributes="href related/absolute_url">
                    read more</a>
        </div>
    </div>
</div>