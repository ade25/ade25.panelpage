<div class="app-contentblock"
    tal:define="klass view/computed_klass;
                editable view/is_editable;
                show_editbar view/show_editbar"
    tal:attributes="class string:ppe-block-edit;
                    data-appui python:editable and 'editable' or 'not-editable'"
    i18n:domain="ade25.panelpage">
    <div class="h6 ppe-subtitle ppe-subtitle-default" i18n:translate="">Content Block Settings</div>
    <div class="ppe-block animated"
        tal:condition="editable"
        tal:attributes="class string:ppe-block animated bounceInLeft">
        <a class="ppe-action pull-right" href="#ppe-block-main-page"
            data-appui="toggle-contentblock"
            data-target="#ppe-block-main-page"
            tal:attributes="href string:${context/absolute_url}/edit-block">
            edit
        </a>
        <a class="animated bounceInLeft" href="#content"
            data-pjax="#app-pjax-container"
            data-appui="xxxtoggle-contentblock"
            tal:attributes="href string:${context/absolute_url}">
            <h4 i18n:translate="">Headline</h4>
        </a>
    </div>
    <div class="ppe-block animated"
        tal:condition="editable"
        tal:attributes="class string:ppe-block animated bounceInLeft">
        <a class="ppe-action pull-right" href="#ppe-block-main-page"
            data-appui="toggle-contentblock"
            data-target="#ppe-block-main-page"
            tal:attributes="href string:${context/absolute_url}/edit-block">
            edit
        </a>
        <a class="animated bounceInLeft" href="#content"
            data-pjax="#app-pjax-container"
            data-appui="xxxtoggle-contentblock"
            tal:attributes="href string:${context/absolute_url}">
            <h4 i18n:translate="">Abstract</h4>
        </a>
    </div>
    <div class="app-editdetails" tal:condition="show_editbar">
        <p class="text-muted">
            Preview
            <small class="contentblock-state pull-right"
                i18n:translate=""
                tal:content="view/item_state_info" />
        </p>
        <a class="btn btn-link btn-sm pull-right" href="#"
            tal:condition="editable"
            i18n:translate=""
            tal:attributes="href string:${context/absolute_url}/@@transition-state?uuid=${context/UID}">
            change
        </a>
    </div>

    <tal:layout tal:condition="context/contentBlockLayout">
        <div class="h6 ppe-subtitle ppe-subtitle-default" i18n:translate="">Content Block Layout</div>
        <div class="ppe-section animated" tal:define="layout view/stored_layout">

            <div class="ppe-block" tal:condition="view/show_ratio_selection">
                <div class="btn-group pull-right">
                  <a class="btn btn-default btn-sm" tal:attributes="href string:${context/absolute_url}/ratio-selection/6/6">1:1</a>
                  <a class="btn btn-default btn-sm" tal:attributes="href string:${context/absolute_url}/ratio-selection/4/8">1:2</a>
                  <a class="btn btn-default btn-sm" tal:attributes="href string:${context/absolute_url}/ratio-selection/3/9">1:3</a>
                  <a class="btn btn-default btn-sm" tal:attributes="href string:${context/absolute_url}/ratio-selection/8/4">2:1</a>
                  <a class="btn btn-default btn-sm" tal:attributes="href string:${context/absolute_url}/ratio-selection/9/3">3:1</a>
                </div>
                <h4><span i18n:translate="">Ratio:</span></h4>
            </div>

            <div class="row ppe-row-eq-height">
                <tal:block tal:repeat="col layout">
                    <div tal:define="idx repeat/col/number"
                        tal:attributes="class string:col-xs-12 col-sm-${col/grid-col} ppe-col-visible">
                        <div class="h4"><span i18n:translate="">Panel</span> <span tal:replace="idx" /></div>
                        <a class="btn btn-sm btn-default pull-right" href="#" i18n:translate="">edit</a>
                        <div><strong><span tal:content="col/component" /></strong>
                            <div class="btn-group">
                              <button type="button" class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown">
                                Change <span class="caret"></span>
                              </button>
                              <ul class="dropdown-menu" role="menu">
                                <li><a href="#">Text</a></li>
                                <li><a href="#">Image</a></li>
                                <li><a href="#">Panel</a></li>
                                <li class="divider"></li>
                                <li><a href="#">Content Alias</a></li>
                                <li><a href="#">Content Listing</a></li>
                              </ul>
                            </div>
                        </div>
                    </div>
                </tal:block>
            </div>
        </div>
    </tal:layout>

    <div class="h6 ppe-subtitle ppe-subtitle-default" i18n:translate="">Content Block Preview</div>
    <div class="ppe-block animated" tal:condition="view/has_data">
        <div tal:replace="structure view/render_item" />
    </div>

    <div class="ppe-block-placeholder" tal:condition="not:view/has_data">
        <div class="row">
            <div class="col-xs-12 col-sm-1">
                <div class="placeholder-sign">&hellip;</div>
            </div>
            <div class="col-xs-12 col-sm-11">
                <div class="placeholder-title" i18n:translate="">
                    This item has not been configured yet
                </div>
            </div>
        </div>
    </div>
</div>