<div class="contentpanel contentpanel-image"
  tal:attributes="class string:contentpanel contentpanel-image ${context/klass};
                  id string:contentpanel-${context/getId}">
  <div class="contentpanel-content">
    <div class="thumbnail" tal:condition="context/image">
      <img tal:define="scales context/@@images"
          tal:replace="structure python: scales.tag('image',
                       width=400,
                       height=400,
                       css_class='img-responsive img-contentpanel',
                       direction='down')"
      />
      <div class="caption" tal:condition="context/caption">
        <p class="text-discreet" tal:content="content/caption" />
    </div>
  </div>
</div>